<script>
  // Function to generate the pie chart
  function generatePieChart() {
    // Sample data for demonstration, replace this with data from your server
    const programData = {
      BloodDonar: 50,
      HareKrishna: 30,
      GenderEquality: 20,
      BrightSpark: 40,
    };

    const programNames = Object.keys(programData);
    const programCounts = Object.values(programData);

    // Get the canvas element and create a new chart instance
    const recruitmentChartCanvas = document.getElementById('recruitment-chart');
    const recruitmentChart = new Chart(recruitmentChartCanvas, {
      type: 'pie',
      data: {
        labels: programNames,
        datasets: [
          {
            data: programCounts,
            backgroundColor: [
              'rgba(255, 99, 132, 0.7)',
              'rgba(54, 162, 235, 0.7)',
              'rgba(255, 206, 86, 0.7)',
              'rgba(75, 192, 192, 0.7)',
              // You can add more colors if needed
            ],
            borderWidth: 1,
          },
        ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        legend: {
          display: true,
          position: 'bottom', // Display the legend at the bottom
        },
      },
    });
  }

  // Call the function to generate the pie chart
  generatePieChart();
</script>
