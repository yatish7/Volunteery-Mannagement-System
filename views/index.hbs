    <script>
    document.addEventListener('DOMContentLoaded', () => {
      const ctx = document.getElementById('category-chart').getContext('2d');
      const chartData = {
        labels: ['Admins', 'Coordinators', 'Volunteers'],
        datasets: [
          {
            label: 'Number of Volunteers, Coordinators, and Admins',
            data: [{{adminCount}}, {{coordinatorCount}}, {{volunteerCount}}],
            backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
            borderWidth: 1,
          },
        ],
      };
      const chartOptions = {
        indexAxis: 'x', // Set to 'x' for horizontal bars (inverted)
        responsive: true,
        maintainAspectRatio: false, // Allow chart to adjust to container size
        plugins: {
          legend: {
            display: false,
          },
          datalabels: {
            color: '#333',
            anchor: 'end',
            align: 'start',
            formatter: function(value, context) {
              return value; // Display the data value on top of each bar
            }
          }
        },
        scales: {
          x: {
            beginAtZero: true,
          },
        },
      };
      const categoryChart = new Chart(ctx, {
        type: 'bar',
        data: chartData,
        options: chartOptions,
      });
    });
  </script>
