<!DOCTYPE html>
<html>
<head>
  <title>Landing Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <style>
    body {
      margin: 0;
      padding: 0;
      background:#DAE2B6 ;
    }

    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      max-width: 100%;
      padding: 20px;
    }

    .box {
      flex: 0 0 calc(33.33% - 20px);
      height: 200px;
      background-color: #f5f5f5;
      border-radius: 10px;
      margin-bottom: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .box-text {
      text-align: center;
    }

    .announcement-section {
      flex: 0 0 calc(50% - 20px);
      background-color: #f5f5f5;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 10px;
      margin-right: 40px;
      height: 400px;
    }

    .form-section {
      flex: 0 0 calc(50% - 20px);
      background-color: #f5f5f5;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 10px;
    }

    .post-section {
      flex: 0 0 calc(54.5% - 80px); 
      background-color: #f5f5f5;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 10px;
      margin-top:20px;
      margin-left: 720px;
      height: 400px;
      width: 400px;
    }

    .post-heading {
      text-align: left;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .form-box {
      background-color: #f5f5f5;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 10px;
    }

    .form-title {
      text-align: center;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .form-input {
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    .form-textarea {
      width: 100%;
      height: 100px;
      padding: 10px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    button[type="submit"] {
      background-color: #333;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.2s ease-in-out;
      display: block;
      margin: 0 auto;
    }

    button[type="submit"]:hover {
      background-color: #555;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <a href="https://imgbb.com/"><img src="https://i.ibb.co/pLSDkB7/Logo-1-36.webp" alt="Logo-1-36" border="0" style="align="left""></a>
      </a>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/profile">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="box">
      <div class="box-text">Number of Volunteers</div>
    </div>
    <div class="box">
      <div class="box-text">Team</div>
    </div>
    <div class="box">
      <div class="box-text">Hours Spent</div>
    </div>
    <div class="box">
      <div class="box-text">Lives Impacted</div>
    </div>
    <div class="box">
      <div class="box-text">Star Performer</div>
    </div>
    <div class="box">
      <div class="box-text">Recruitments</div>
    </div>
  </div>

  <div class="container">
  <div class="announcement-section">
  <h2 class="announcement-heading">Announcements</h2>
  <br>
  <div class="announcement-box">
    {{#if announcements.length}}
      {{#each announcements}}
        <div class="announcement">
          <h3>{{title}}</h3>
          <p>{{description}}</p>
        </div>
      {{/each}}
    {{else}}
      <p>No announcements available.</p>
    {{/if}}
  </div>





    </div>

    <div class="form-section">
      <div class="form-box">
        <h2 class="form-title">Create a Post</h2>
        <form method="post" action="/index">
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter title">
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="description" class="form-control" placeholder="Enter description"></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Post</button>
        </form>
      </div>
    </div>

    <div class="post-section">
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-HDKwkiGhA9svR9OuKul4gSpMq2lbFSKHNpEkT3nHDqK4Zs7I8PEa0K8vHQESRyMQ" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-FXBJ5ZTkUcUbgAnTDSD2wmluXH9ESM52Lwfga8i+wsudUf+cSQY9mZMcYQGhyq4o" crossorigin="anonymous"></script>
</body>
</html>
